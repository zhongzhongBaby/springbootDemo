<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Page">
    <!-- 分页条件 -->
    <sql id="pageWhere">
        <if test="page != null and limit != null">
            LIMIT ${page * limit} , ${limit}
        </if>
    </sql>

</mapper>